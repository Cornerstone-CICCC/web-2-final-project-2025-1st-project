---
import { FaFacebookF } from "react-icons/fa";
import { FaInstagram } from "react-icons/fa";
import { FaTwitter } from "react-icons/fa";
import { FaLinkedin } from "react-icons/fa";

const links = [
  {
    href: "https://facebook.com",
    label: "Facebook",
    icon: FaFacebookF,
  },
  {
    href: "https://instagram.com",
    label: "Instagram",
    icon: FaInstagram,
  },
  { href: "https://twitter.com", label: "Twitter", icon: FaTwitter },
  {
    href: "https://linkedin.com",
    label: "Linkedin",
    icon: FaLinkedin,
  },
];
---

<footer class="footer">
  <div class="footer__container">
    <div class="footer__logo-section">
      <div class="footer__logo">
        <img
          src="/main-icon.svg"
          alt="Ddsgnr Logo"
          class="footer__logo-image"
        />
        <p><strong>Ddsgnr</strong></p>
      </div>
      <p class="footer__description">
        Join our newsletter to stay up to date on features and releases.
      </p>
      <form class="footer__form" id="footer-form">
        <input
          type="email"
          placeholder="Enter your email"
          class="footer__input"
        />
        <button type="submit" class="footer__button">Subscribe</button>
      </form>
      <p class="footer__privacy">
        By subscribing you agree to with our
        <a href="#" class="footer__privacy-link">Privacy Policy</a> and provide consent
        to receive updates from our company.
      </p>
    </div>

    <div class="footer__links-section">
      <div class="footer__links">
        <div class="footer__column">
          <h4 class="footer__title">About Us</h4>
          <ul class="footer__list">
            <li><a href="#" class="footer__link">Home</a></li>
            <li><a href="#" class="footer__link">Doctors</a></li>
            <li><a href="#" class="footer__link">Categories</a></li>
            <li><a href="#" class="footer__link">Contact</a></li>
          </ul>
        </div>
        <div class="footer__column">
          <h4 class="footer__title">Category</h4>
          <ul class="footer__list">
            <li><a href="#" class="footer__link">Neurology</a></li>
            <li><a href="#" class="footer__link">Surgery</a></li>
            <li><a href="#" class="footer__link">Defibrillators</a></li>
            <li><a href="#" class="footer__link">Diagnostic</a></li>
            <li><a href="#" class="footer__link">Anesthesia</a></li>
            <li><a href="#" class="footer__link">Pumps</a></li>
          </ul>
        </div>
        <div class="footer__column">
          <h4 class="footer__title">Follow Us</h4>
          <ul class="footer__list">
            {
              links.map((link) => (
                <li>
                  <a
                    href={link.href}
                    class="footer__sns__link"
                    target="_blank"
                    rel="noopener noreferrer"
                  >
                    <link.icon size="24" />
                    {link.label}
                  </a>
                </li>
              ))
            }
          </ul>
        </div>
      </div>

      <div class="footer__mobile__sns__list">
        <ul class="footer__list">
          {
            links.map((link) => (
              <li>
                <a
                  href={link.href}
                  class="footer__sns__link"
                  target="_blank"
                  rel="noopener noreferrer"
                >
                  <link.icon size="24" />
                </a>
              </li>
            ))
          }
        </ul>
      </div>
    </div>
  </div>

  <div class="footer__bottom">
    <p class="footer__copyright">2023 Ddsgnr. All rights reserved.</p>
    <div class="footer__policies">
      <a href="#" class="footer__policy-link">Privacy Policy</a>
      <a href="#" class="footer__policy-link">Terms of Service</a>
      <a href="#" class="footer__policy-link">Cookies Settings</a>
    </div>
  </div>
</footer>

<script src="/src/js/footer.js" type="module"></script>